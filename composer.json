{
    "name": "sgomez/botman-demo",
    "description": "Botman Symfony bundle demo",
    "authors": [
        {
            "name": "Sergio GÃ³mez",
            "email": "sergio@uco.es"
        }
    ],
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "botman/driver-facebook": "^1.9",
        "botman/driver-telegram": "^1.5",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/httplug-bundle": "^1.11",
        "sgomez/botman-bundle": "^0.2",
        "symfony/console": "*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "*",
        "symfony/web-server-bundle": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.3",
        "phpstan/phpstan-symfony": "^0.10.1",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "*",
        "symplify/easy-coding-standard": "^4.6"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-cs": "vendor/bin/ecs check src",
        "fix-cs": "vendor/bin/ecs check --fix src",
        "phpstan": "vendor/bin/phpstan analyse src --level max"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
